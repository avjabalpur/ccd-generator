      <basicHttpBinding>
        <!-- When using SOAP 1.0, you can set transport security and other parameters here -->
        <binding name="sampleBindingConfigSoap10" maxReceivedMessageSize="12000000"></binding>
      </basicHttpBinding>
    </bindings>
  </system.serviceModel>
  <system.net>
